{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist/solid",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "declaration": true,
    "composite": true
  },
  "include": ["src/adapters/solid/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.spec.tsx"],
  "references": [{ "path": "./tsconfig.base.json" }]
}
