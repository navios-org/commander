{
  "name": "@navios/tui-adapter-solid",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tui-adapter-solid/src",
  "prefix": "tui-adapter-solid",
  "tags": [],
  "projectType": "library",
  "targets": {
    "check": {
      "executor": "nx:run-commands",
      "inputs": ["^projectSources", "projectSources", "{projectRoot}/tsconfig.json"],
      "options": {
        "command": "tsc --build",
        "cwd": "packages/tui-adapter-solid"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "inputs": ["^projectSources", "project"],
      "options": {
        "command": "oxlint --fix",
        "cwd": "packages/tui-adapter-solid"
      }
    },
    "test:ci": {
      "executor": "nx:run-commands",
      "inputs": ["^projectSources", "project"],
      "options": {
        "command": "bun test",
        "cwd": "packages/tui-adapter-solid"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["projectSources", "{projectRoot}/tsdown.config.mts"],
      "outputs": ["{projectRoot}/lib"],
      "dependsOn": ["check", "test:ci", "lint"],
      "options": {
        "command": "tsdown",
        "cwd": "packages/tui-adapter-solid"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "yarn npm publish --access public",
        "cwd": "packages/tui-adapter-solid"
      }
    },
    "publish:next": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "yarn npm publish --access public --tag next",
        "cwd": "packages/tui-adapter-solid"
      }
    }
  }
}
