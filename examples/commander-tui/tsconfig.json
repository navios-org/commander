{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "lib": ["ES2022", "esnext.decorators"],
    "jsxImportSource": "@opentui/react",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "emitDeclarationOnly": false,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"]
}
